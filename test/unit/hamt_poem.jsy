const { assert, expect } = require('chai')
import { u8_to_hex } from 'u8-utils'
import { poem_lines } from '../poem.jsy'

#IF PLAT_NODEJS
  import {tahoe_opaque, phorbas_hamt} from 'phorbas/esm/node/index.mjs'
  import {js_map_store} from 'phorbas/esm/node/index.mjs'

#ELIF PLAT_WEB
  import {tahoe_opaque, phorbas_hamt} from 'phorbas/esm/web/index.js'
  import {js_map_store} from 'phorbas/esm/web/index.js'
  import {web_indexdb_store} from 'phorbas/esm/web/index.js'


describe @ 'hamt poem', @::
  it @ 'with js_map_store', @::>
    await test_hamt_poem @
      tahoe_opaque.with_ctx @:
        storage: await js_map_store()


  #IF PLAT_WEB
    it @ 'with web_indexdb_store', async function() ::
      await test_hamt_poem @
        tahoe_opaque.with_ctx @:
          storage: await web_indexdb_store()

  ;


async function test_hamt_poem(tahoe) ::
  let hamt = phorbas_hamt(tahoe).new_root()

  const hamt_api_eq = [], hamt_root_eq = []
  for let i=0; i<3; i++ ::
    const hamt_0 = hamt
    for const line of poem_lines ::
      const kctx = await tahoe.from_content(line)
      hamt = await hamt.add_key @ kctx.store()

    hamt_root_eq.push @ hamt.root === hamt_0.root
    hamt_api_eq.push @ hamt === hamt_0

  assert.deepEqual @ hamt_root_eq, [false, true, true]
  assert.deepEqual @ hamt_api_eq, [false, true, true]


  const hex = u8_to_hex @ await hamt.root.encode()
  assert.equal @ hex.length, 2122
  assert.equal @ hex, ''

